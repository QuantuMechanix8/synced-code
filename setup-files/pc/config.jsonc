            "key": "Kernel   ",
            "keyColor": "blue",
            "type": "kernel"
        },
        //"initsystem",
        {
            "key": "Uptime   ",
            "keyColor": "cyan",
            "type": "uptime"
        },
        //"loadavg",
        //"processes",
        {
            "key": "Packages ",
            "keyColor": "cyan",
            "type": "packages"
        },
        {
            "key": "Shell    ",
            "keyColor": "yellow",
            "type": "shell"
        },
        "editor",
        //"display",
        "brightness",
        //"monitor",
        //"lm",
        {
            "key": "DE       ",
            "keyColor": "yellow",
            "type": "de"
        },
        {
            "key": "WM       ",
            "keyColor": "yellow",
            "type": "wm"
        },
        //"wmtheme",
