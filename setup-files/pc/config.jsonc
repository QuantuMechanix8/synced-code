        //"terminalsize",
        //"terminaltheme",
        {
            "key": "CPU      ",
            "keyColor": "green",
            "type": "cpu",
            "format": "{1} @ {7} - {8}",
            "temp": true
            
        },
        //"cpucache",
        //"cpuusage",
        {
            "key": "GPU      ",
            "keyColor": "green",
            "type": "gpu",
            "format": "{1} {2:18} - {4}",
            "temp": true
        },
        {
            "key": "Memory   ",
            "keyColor": "magenta",
            "type": "memory"
        },
        "physicalmemory",
        {
            "key": "Swap     ",
            "keyColor": "magenta",
            "type": "swap"
        },
        {
            "key": "Disk     ",
            "keyColor": "white",
            "type": "disk",
            "format": "{13} {1}/{2} {?10}\u001b[90m{#1}({10}){#}{?}"
            // if theres a mount name show it in gray
            
        },
		{
				"key":"Battery  ",
				"keyColor": "white",
				"type": "battery"
		},
